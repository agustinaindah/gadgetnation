<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/layCart"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0">

        <TextView
            android:id="@+id/txtTitleTotalHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Total Harga"/>

        <TextView
            android:id="@+id/txtTotalHarga"
            android:layout_below="@id/txtTitleTotalHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Rp 1.950.000"/>

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="@string/label_process_checkout"
            android:theme="@style/ButtonColoredPrimary" />

    </RelativeLayout>

</RelativeLayout>