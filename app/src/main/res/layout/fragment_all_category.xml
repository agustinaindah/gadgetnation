<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatchLayout"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layCardCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardSmartphone"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgSmartphone"
                        style="@style/MatchWrapLayout"
                        android:src="@drawable/smartphone" />

                    <TextView
                        android:id="@+id/txtSmartphone"
                        style="@style/WrapWrapLayout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:text="Smartphone"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardCamera"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/cardSmartphone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgCamera"
                        style="@style/MatchWrapLayout"
                        android:src="@drawable/camera" />

                    <TextView
                        android:id="@+id/txtCamera"
                        style="@style/WrapWrapLayout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="58dp"
                        android:text="Camera"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardLaptop"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardSmartphone"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgLaptop"
                        style="@style/MatchWrapLayout"
                        android:src="@drawable/laptop" />

                    <TextView
                        android:id="@+id/txtLaptop"
                        style="@style/WrapWrapLayout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="58dp"
                        android:text="Laptop"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardComputer"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardCamera"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/cardLaptop">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgComputer"
                        style="@style/MatchWrapLayout"
                        android:src="@drawable/computer" />

                    <TextView
                        android:id="@+id/txtComputer"
                        style="@style/WrapWrapLayout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:text="Computer"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/sliderDetailProduct"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_below="@id/layCardCategory"/>

        <FrameLayout
            android:id="@+id/fragmentContainer"
            style="@style/MatchWrapLayout"
            android:layout_below="@id/sliderDetailProduct" />

